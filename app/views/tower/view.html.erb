<style>
.encounter-btn:hover{
  background:  #006699 !important;
}

.encounter-btn{
  background: #0099CC !important;
  font-size: 1.1em;
  padding: 11px;
  color: white !important;
  box-shadow: 4px 4px 3px lightgrey;
  border-radius: 0px !important;
}

.module-btn:hover{
  background-color: white !important;
}

.display-details{
  border-right: 1px solid lightgray;
}

.display-details strong{
  width: 40%;
}
</style>
<div>
  <ol class="breadcrumb " style="margin: 3px; padding: 5px;">
    <li><a href="/">Home</a></li>
    <li><a href="/tower/index">Towers</a></li>
    <li><a class='active' href="/tower/view?tower_id=<%=@tower.id%>">View Tower</a></li>
  </ol>
</div>
<div class="panel panel-primary">
    <div class="panel-heading ">
      <span class="glyphicon glyphicon-eye-open"></span>
      <b>View Tower</b>
      <div class="panel-btn">
        <a class="btn btn-sm btn-info" href="/tower/edit?tower_id=<%=@tower.id%>">
          <span class="glyphicon glyphicon-pencil"></span>
          Edit
        </a>
      </div>
    </div>
    <div class="panel-body">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-4">
            <div class="display-details">
              <h4><strong>Name</strong><%= @tower.name%></h4>
              <p><strong>Tower Type</strong><%=@tower_type%></p>
              <p><strong>District</strong><%= @district_name %></p>
              <p><strong>Latitude</strong><%= @tower.lat%></p>
              <p><strong>Longitude</strong><%= @tower.long%></p>
              <p><strong>Description</strong><%=@tower.description%></p>
              <p><strong>Created By</strong><%=@creator%></p>
              <p><strong>Date Created</strong><%=@tower.created_at.strftime("%d-%b-%Y")%></p>
            </div>
          </div>

          <div class="col-md-8" style="padding: 0px;">
          <div class="col-md-8">
            <% (@modules || []).each do |mod, val, link|%>
              <button type="button" onclick="window.location = '<%=link%>'"
                   class="btn btn-default pull-left module-btn" style="width: 40%;margin: 1.3%; padding: 10px; font-size: 1.1em;background: #f8f8ff;"><%=mod%> <br />
                  <span class="badge" style="font-size: 1em; background: #2e6da4;"><%= val%></span>
              </button>
            <% end %>
            </div>
            <div class="col-md-4">
              <ul class="list-group">
                <% (@common_encounters || []).each do |name, link|%>
                <li class="list-group-item encounter-btn btn-sm" style=" cursor: pointer;" 
                  onclick="window.location = '<%= link%>?tower_id=<%= params[:tower_id]%>' " ><%= name%> </li>
                <% end %>
              </ul>
            </div>
          </div>
          
        </div>
      </div>
    </div>
</div>
